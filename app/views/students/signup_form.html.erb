

<h2> Sign Up </h2>

<form action="/insert_user_record">

  <div class="field">
    <label for="browser_first_name">First name</label><br />
    <input type="text" name="input_first_name" id="browser_first_name" />
  </div>

  <div class="field">
    <label for="browser_last_name">Last name</label><br />
    <input type="text" name="input_last_name" id="browser_last_name" />
  </div>

  <div class="field">
    <label for="browser_username">Username</label><br />
    <input type="text" name="input_username" id="browser_username" />
  </div>

  <div class="field">
    <label for="browser_email">Email</label><br />
    <input type="text" name="input_email" id="browser_email" />
  </div>

  <div class="field">
    <label for="browser_password">Password</label>
    <em>(6 characters minimum)</em>
    <br />
    <input autocomplete="new-password" type="password" name="input_password" id="browser_password" />
  </div>

  <div class="field">
    <label for="browser_password_confirmation">Password confirmation</label><br />
    <input autocomplete="new-password" type="password" name="input_password_confirmation" id="browser_password_confirmation" />
  </div>

  <br/>

  <div class="actions">
    <input type="submit" name="commit" value="Sign up" data-disable-with="Sign up" />
  </div>

</form>

<hr>
